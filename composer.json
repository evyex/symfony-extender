{
    "name": "evyex/symfony-extender",
    "description": "Symfony bundle to must have features",
    "type": "symfony-bundle",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "symfony/validator": "^6.4|^7.4|^8.1",
        "symfony/http-kernel": "^6.4|^7.4|^8.1",
        "symfony/dependency-injection": "^6.4",
        "doctrine/orm": "^3.6",
        "symfony/serializer": "^6.4",
        "symfony/expression-language": "^6.4",
        "symfony/property-access": "^6.4",
        "symfony/security-core": "^6.4"
    },
    "autoload": {
        "psr-4": {
            "Evyex\\SymfonyExtender\\": "src/",
            "Evyex\\SymfonyExtender\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Evgenij Yurchenko",
            "email": "evgenijvy@gmail.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": ">=10",
        "phpstan/phpstan": "^2.1",
        "friendsofphp/php-cs-fixer": "^3.92"
    },
    "scripts": {
        "cs-fix": "php-cs-fixer fix",
        "cs-check": "php-cs-fixer fix --dry-run",
        "stan-check": "phpstan analyse",
        "test": "phpunit tests",
        "pipeline": [
            "@cs-fix",
            "@stan-check",
            "@test",
            "@composer audit"
        ]
    }
}
